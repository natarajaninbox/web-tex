\question A continuous-time signal given by $x(t) = \cos(4\pi t)$ is sampled at 4 Hz (Consider the $1^{st}$ sample to be obtained at $t=0$). What is the value of the discrete-time sequence $x[n]$ at $n=5$? (\textbf{1 mark})
\begin{itemize}
    \item $\frac{1}{\sqrt{2}}$
    \item $-1$
    \item $0$
    \item $1$
\end{itemize}
\question Which of the following is true about the dirac-delta function $\delta(t)$? (\textbf{1 mark})
\begin{itemize}
    \item $\int_{-\infty}^{\infty}\delta(t)dt = 0$
    \item $\int_{-\infty}^{\infty}\delta(t)dt$ is not defined.
    \item $\int_{-\infty}^{\infty}\delta(t)dt = 1$
    \item $\int_{-\infty}^{\infty}\delta(t)dt = -1$
\end{itemize}

\question Consider the input signal to a system $x(t) = e^{-2t}u(t)$ whose impulse response is $h(t)=u(t)$. Compute the output response of this system. \textbf{(Hint: Continuous-time convolution)}
\begin{itemize}
    \item $\frac{(1-2e^{-2t})}{2}u(t)$
    \item $\frac{(1-e^{-2t})}{2}u(t)$
    \item $1-\frac{e^{-2t}}{2}u(t)$
    \item $(1-e^{-2t})u(t)$
\end{itemize}

\question Which of the following signals are periodic?
\begin{itemize}
    \item $\sin(4\pi t)+\cos(2t)$
    \item $\sin(4\pi t)+\cos(5\pi^2 t)$
    \item $\sin(2 t)+\cos(4t)$
    \item $\sin(\pi t)+\cos\left(\frac{4}{\pi}t\right)$
\end{itemize}

\question Consider a discrete-time input sequence $x[n]=\alpha^n u[n]$ fed to a system whose impulse response is $h[n] = u[n]$ defined for $n=0,1,2,3...$. Compute the output sequence $y[n]$ generated by the system. ($0<\alpha<1$) \textbf{(Hint: Discrete-time convolution)}
\begin{itemize}
    \item $y[n] = \frac{1-\alpha^{n}}{1-\alpha}u[n]$
    \item $y[n] = \frac{1-\alpha^{n+1}}{1-\alpha}u[n]$
    \item $y[n] = \frac{1-\alpha^{n+1}}{1-\alpha^n}u[n]$
    \item $y[n] = \left(1+\frac{1}{n}\right)\frac{1-\alpha^{n}}{1-\alpha}u[n]$
\end{itemize}

\question Consider a zero-mean periodic signal $f(t)$ with period $'T'$ such that it has the following property,
\begin{align*}
    f(-t) = -f(t)
\end{align*}
Suppose the fourier series expansion of such a signal is given by,
\begin{align*}
    f(t)=\sum_{n=1}^{\infty}a_n\cos\left(\frac{2\pi n}{T}t\right)+\sum_{n=1}^{\infty}b_n\sin\left(\frac{2\pi n}{T}t\right)
\end{align*}
Which of the following is true?
\begin{itemize}
    \item All the coefficients of even harmonics of both sine and cosine terms must always be zero.
    \item All the coefficients $b_n$ of the sine terms must be zero. 
    \item All the coefficients of odd harmonics of both sine and cosine terms must always be zero.
    \item All the coefficients $a_n$ of the cosine terms must be zero.
\end{itemize}
\question Suppose the output signal of a full wave rectifier is given by $f(t)$, (Consider $f(t)$ to be a full-wave rectified sine wave with amplitude $'A'$ and $f(0)=0$). The fourier series expansion of such a signal is given by,
\begin{align*}
    f(t)=a_0+\sum_{n=1}^{\infty}a_n\cos\left(\frac{2\pi n}{T}t\right)+\sum_{n=1}^{\infty}b_n\sin\left(\frac{2\pi n}{T}t\right)
\end{align*}
Which of the following is true?
\begin{itemize}
    \item $a_0$ is zero
    \item $a_0$ is non-zero and its value is given by $a_0=\frac{2A}{\pi}$
    \item $a_0$ is non-zero and its value is given by $a_0=\frac{A}{2\pi}$
    \item $a_n = 0$, for all $n>0$
\end{itemize}
